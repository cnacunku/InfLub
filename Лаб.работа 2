#include <iostream>
#include <cmath>
#include <locale>
#include <string>
#include <iomanip> 

using namespace std;

double exponent(const double x, const double e) {
    double sum = 1.0;
    double term = x; // Первый член ряда (k=1: x^1/1! = x)
    int k = 1; // Текущий номер ряда

    while (fabs(term) > e) {
        sum += term;
        k++;
        term *= x / k; // term(k) = term(k-1) * (x / k), что соответствует x^k/k!
    }
    return sum;
}


int main() {
    setlocale(0, "ru");

    cout << "Задача 1" << endl;
    double xn, xk, dx;
    double e1 = 0.1, e2 = 0.000001;

    cout << "Введите начальное значение xn:";
    cin >> xn;
    cout << "Введите конечное значение xk: ";
    cin >> xk;
    cout << "Введите шаг dx: ";
    cin >> dx;

    cout << "+----------+------------+------------+-------------+-------------+------------+" << endl;
    cout << "|    x     |   exp(x)   |   e1=0.1   |   f1(x)     |   e2=1e-6   |   f2(x)    |" << endl;
    cout << "+----------+------------+------------+-------------+-------------+------------+" << endl;

    cout << fixed << setprecision(6);
    for (double x = xn; x <= xk; x += dx) {
         double result1 = exponent(x, e1);
         double result2 = exponent(x, e2);

         cout << "| " << setw(8) << x << " "
              << "| " << setw(10) << exp(x) << " "
              << "| " << setw(10) << e1 << " "
              << "| " << setw(10) << result1 << "  "
              << "| " << setw(10) << e2 << "  "
              << "| " << setw(10) << result2 << " |" << endl;
    }
    cout << "+----------+------------+------------+-------------+-------------+------------+" << endl;


    cout << endl << "Задача 2" << endl;

    double a;
    cout << "Введите a: ";
    cin >> a;

    double x0 = a / 3;

    for (int i = 1; i < 10; ++i) {
        double result = 2.f / 3.f;
        result *= x0 + (a / (2 * x0 * x0));

        x0 = result;
    }

    cout << "Точное значение a^(1/3): " << x0 << endl;


    cout << endl << "Задача 3" << endl;
    cout << "Введите n: ";
    int n;
    cin >> n;

    double m = 910;

    for (int k = 1; k <= n; ++k) {
        double r = pow(k, 3) * sin(n + k / (double)n);
        m = min(m, r);
        cout << " " << k << " | min = " << m << endl;
    }

    cout << "Минимальное значение: " << m << endl;


    cout << endl << "Задача 4" << endl;
    int n4;
    cout << "Введите n: ";
    cin >> n4;

    double a4 = 1.0, b4 = 1.0;
    double result = a4 * b4;

    for (int k = 2; k <= n4; k++) {
        double new_a = 0.5 * (sqrt(b4) + 0.5 * a4);
        double new_b = 2 * a4 * a4 + b4;
        result += new_a * new_b;
        a4 = new_a;
        b4 = new_b;
    }

    cout << "Результат: " << result << endl;


    cout << endl << "Задача 5" << endl;
    double e = exp(1);
    double eps1;

    cout << "Введите погрешность: ";
    cin >> eps1;

    cout << "Первый предел:" << endl;
    for (int n = 0;; ++n) {
        double x = pow(2, -n);
        double lim = sin(x) / x;

        if (fabs(lim - 1) <= eps1) {
            cout << "Левая часть выражения первый раз отличается от 1 менее, чем на " << eps1 << " при n = " << n << "; Значение lim = " << lim << endl;
            break;
        }
    }

    cout << "\nВторой предел:" << endl;
    for (int n = 1;; ++n) {
        double lim = pow(1 + 1.f / n, n);
        if (fabs(lim - e) <= eps1) {
            cout << "Левая часть выражения первый раз отличается от " << e << " менее, чем на " << eps1 << " при n = " << n << "; Значение lim = " << lim << endl;
            break;
        }
    }
    return 0;
}
